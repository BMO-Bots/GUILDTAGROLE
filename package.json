{
  "name": "discord-tag-role-bot",
  "version": "1.0.0",
  "description": "Discord bot that automatically assigns roles based on user guild identity",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "start:bun": "bun dist/index.js",
    "dev": "bun --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target node",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "discord.js": "^14.21.0",
    "dotenv": "^17.0.1",
    "https-proxy-agent": "^7.0.6"
  },
  "devDependencies": {
    "@types/node": "^24.0.10",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "discord",
    "bot",
    "discord-bot",
    "guild-identity",
    "role-management",
    "typescript",
    "bun"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sw3do/discord-tag-role-bot.git"
  },
  "bugs": {
    "url": "https://github.com/sw3do/discord-tag-role-bot/issues"
  },
  "homepage": "https://github.com/sw3do/discord-tag-role-bot#readme",
  "engines": {
    "node": ">=18.0.0"
  }
}